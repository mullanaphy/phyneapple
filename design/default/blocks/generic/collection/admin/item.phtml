<h1><?= $itemName ?> #<?= $item->id ?></h1>
<form action="<?= $_SERVER['PHP_SELF'] ?>" method="post">
    <input name="id" type="hidden" value="<?= $item->id ?>"/>
    <fieldset>
        <?php foreach ($item->toArray() as $key => $value): ?>
            <?php if ($key === 'id') {
                continue;
            } ?>
            <dl>
                <dt><label for="generic-item-<?= $this->clean($key) ?>"><?= $this->clean(ucfirst($key)) ?></label></dt>
                <dd><input id="generic-item-<?= $this->clean($key) ?>" name="<?= $this->clean($key) ?>" type="text"
                           value="<?= $this->clean($value) ?>"/></dd>
            </dl>
        <?php endforeach ?>
    </fieldset>
    <fieldset class="submit">
        <input type="submit" value="Save"/>
    </fieldset>
</form>